---
interface Props {
    url: string;
    width?: string;
    height?: string;
}

const { url, width = "100%", height = "600px" } = Astro.props;
---

<div class="webview-container">
    <iframe
        src={url}
        width={width}
        height={height}
        frameborder="0"
        allowfullscreen
        class="webview-frame"
    ></iframe>
</div>

<style>
    .webview-container {
        width: 100%;
        max-width: 100%;
        margin: 0 auto;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .webview-frame {
        border: none;
        width: 100%;
        height: 100%;
    }
</style> 