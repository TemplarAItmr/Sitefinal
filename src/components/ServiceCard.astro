---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
  <div class="text-primary mb-4" set:html={icon} />
  <h3 class="text-xl font-poppins font-semibold text-primary mb-3">{title}</h3>
  <p class="text-neutral-dark">{description}</p>
</div>