---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

interface Props {
  title: string;
  company: string;
  description: string;
  results: string[];
  image: string;
}

const { title, company, description, results, image } = Astro.props;
---

<article class="glass rounded-lg overflow-hidden hover:scale-105 transition-transform duration-300">
  <div class="relative h-48">
    <img src={image} alt={company} class="w-full h-full object-cover" />
    <div class="absolute inset-0 bg-gradient-to-t from-primary/80 to-transparent"></div>
    <div class="absolute bottom-4 left-4 text-white">
      <h3 class="text-xl font-poppins font-semibold mb-1">{company}</h3>
      <p class="text-sm text-white/80">{title}</p>
    </div>
  </div>
  <div class="p-6">
    <p class="text-white/80 mb-4">{description}</p>
    <h4 class="font-semibold text-accent mb-2">Resultados Alcan√ßados:</h4>
    <ul class="space-y-2">
      {results.map(result => (
        <li class="flex items-start gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-white/80">{result}</span>
        </li>
      ))}
    </ul>
  </div>
</article>