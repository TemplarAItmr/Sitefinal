---
import { defaultLang } from '../i18n/ui';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Services from '../components/Services.astro';
import TypewriterText from '../components/TypewriterText.astro';
import { getLangFromUrl, useTranslations } from '../utils/i18n';

// Define o idioma como português
const lang = defaultLang;
const t = useTranslations(lang);

// Título e descrição da página
const title = "TemplarAI - Soluções em Inteligência Artificial";
const description = "Soluções personalizadas em IA para otimizar processos, melhorar a experiência do cliente e impulsionar o seu crescimento.";
---

<Layout title={title} description={description}>
  <Header />
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-poppins font-bold text-white mb-12 leading-[1.2] tracking-normal">
              Desenvolvemos <TypewriterText words={['soluções', 'automações', 'agentes']} className="gradient-text" /> IA para o seu negócio
            </h1>
            <p class="text-lg md:text-xl text-white/80 mb-8 max-w-2xl mx-auto mt-8">
              {t('hero.subtitle')}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center mt-12">
              <a href="#contact" class="btn-primary">
                {t('hero.cta.primary')}
              </a>
              <a href="/pt/servicos" class="btn-secondary">
                {t('hero.cta.secondary')}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <Services />
  </main>
</Layout>

<style>
  .btn-primary {
    @apply bg-accent text-primary font-semibold py-3 px-6 rounded-lg shadow-lg hover:shadow-accent/20 transition-all duration-300 hover:scale-105 inline-block;
  }
  
  .btn-secondary {
    @apply bg-transparent text-white border-2 border-accent/50 font-semibold py-3 px-6 rounded-lg shadow-lg hover:border-accent hover:shadow-accent/20 transition-all duration-300 hover:scale-105 inline-block;
  }
</style>