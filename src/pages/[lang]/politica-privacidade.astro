---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getLangFromUrl, useTranslations } from '../../utils/i18n';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout 
  title={t('privacy.page.title')}
  description={t('privacy.page.description')}
>
  <Header />
  <main class="pt-20">
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h1 class="text-4xl font-poppins font-bold gradient-text mb-8">
            {t('privacy.page.heading')}
          </h1>

          <p class="text-white/60 mb-8">
            {t('privacy.lastUpdate')}
          </p>

          <div class="glass p-8 rounded-lg space-y-8">
            <section>
              <h2 class="text-2xl font-poppins font-semibold text-accent mb-4">
                {t('privacy.intro.title')}
              </h2>
              <p class="text-white/80">
                {t('privacy.intro.content')}
              </p>
            </section>

            <section>
              <h2 class="text-2xl font-poppins font-semibold text-accent mb-4">
                {t('privacy.data.title')}
              </h2>
              <p class="text-white/80 mb-4">
                {t('privacy.data.description')}
              </p>
              <ul class="list-disc pl-6 text-white/80 space-y-2">
                {t('privacy.data.list').split('|').map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </section>

            <section>
              <h2 class="text-2xl font-poppins font-semibold text-accent mb-4">
                {t('privacy.usage.title')}
              </h2>
              <p class="text-white/80 mb-4">
                {t('privacy.usage.description')}
              </p>
              <ul class="list-disc pl-6 text-white/80 space-y-2">
                {t('privacy.usage.list').split('|').map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </section>

            <section>
              <h2 class="text-2xl font-poppins font-semibold text-accent mb-4">
                {t('privacy.rights.title')}
              </h2>
              <p class="text-white/80 mb-4">
                {t('privacy.rights.description')}
              </p>
              <ul class="list-disc pl-6 text-white/80 space-y-2">
                {t('privacy.rights.list').split('|').map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </section>

            <section>
              <h2 class="text-2xl font-poppins font-semibold text-accent mb-4">
                {t('privacy.security.title')}
              </h2>
              <p class="text-white/80">
                {t('privacy.security.content')}
              </p>
            </section>

            <section>
              <h2 class="text-2xl font-poppins font-semibold text-accent mb-4">
                {t('privacy.contact.title')}
              </h2>
              <p class="text-white/80 mb-4">
                {t('privacy.contact.description')}
              </p>
              <div class="text-white/80">
                <p>E-mail: templarai.tmr@gmail.com</p>
                <p>{t('privacy.contact.phone')}: +351 913 139 933</p>
              </div>
             </section>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>