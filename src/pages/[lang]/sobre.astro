---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getLangFromUrl, useTranslations } from '../../utils/i18n';
import { languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const introText = t('about.page.intro').split('\n\n');
---

<Layout 
  title={t('about.page.title')}
  description={t('about.page.description')}
>
  <Header />
  <main class="pt-20">
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-5xl font-poppins font-bold gradient-text mb-8">
            {t('about.page.heading')}
          </h1>
          <div class="text-lg text-white/80 space-y-6">
            {introText.map(paragraph => (
              <p>{paragraph}</p>
            ))}
          </div>

          <div class="grid md:grid-cols-3 gap-8 mt-16">
            <div class="glass p-6 rounded-lg hover:scale-105 transition-transform duration-300">
              <h2 class="text-xl font-poppins font-semibold text-accent mb-3">
                {t('about.mission.title')}
              </h2>
              <ul class="text-white/80 space-y-4">
                {t('about.mission.description').split(';').map((item) => {
                  const [title, description] = item.split(')');
                  return (
                    <li class="flex items-start gap-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0 mt-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <div>
                        <span class="text-accent font-semibold text-lg">{title.replace('(', '')}</span>
                        <span class="block">{description}</span>
                      </div>
                    </li>
                  );
                })}
              </ul>
            </div>
            <div class="glass p-6 rounded-lg hover:scale-105 transition-transform duration-300">
              <h2 class="text-xl font-poppins font-semibold text-accent mb-3">
                {t('about.vision.title')}
              </h2>
              <p class="text-white/80">
                {t('about.vision.description')}
              </p>
            </div>
            <div class="glass p-6 rounded-lg hover:scale-105 transition-transform duration-300">
              <h2 class="text-xl font-poppins font-semibold text-accent mb-3">
                {t('about.values.title')}
              </h2>
              <ul class="text-white/80 space-y-2">
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {t('about.values.innovation')}
                </li>
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {t('about.values.focus')}
                </li>
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {t('about.values.integrity')}
                </li>
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {t('about.values.collaboration')}
                </li>
                <li class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {t('about.values.excellence')}
                </li>
              </ul>
            </div>
          </div>

          <div class="glass p-8 rounded-lg relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-r from-secondary/20 to-accent/20 blur-xl"></div>
            <div class="relative z-10">
              <h2 class="text-2xl font-poppins font-semibold text-white mb-6">{t('about.contact.title')}</h2>
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <p class="text-white/80 mb-2">{t('about.contact.phone')}:</p>
                  <a href="tel:+351913139933" class="text-accent hover:text-white transition-colors">
                    +351 913 139 933
                  </a>
                </div>
                <div>
                  <p class="text-white/80 mb-2">{t('about.contact.email')}:</p>
                  <a href="mailto:templarai.tmr@gmail.com" class="text-accent hover:text-white transition-colors">
                    templarai.tmr@gmail.com
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>